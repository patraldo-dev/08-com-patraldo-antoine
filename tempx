        <h1>{artwork.display_name || artwork.title}</h1> <!-- Add fallback -->
        <p>Year: {artwork.year}</p>
        <p>{artwork.description}</p>

        {#if artwork.video_id}
          <video controls poster={getImageSource(artwork)} title="Video: {artwork.display_name || artwork.title}"> <!-- Add fallback here too -->
            <source src={`https://imagedelivery.net/4bRSwPonOXfEIBVZiDXg0w/${artwork.video_id}/original`} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        {:else}
          <img
            src={getImageSource(artwork)}
            alt={artwork.display_name || artwork.title} <!-- This one was already good -->
            class="artwork-image"
          />
        {/if}
